{
  "name": "pragma-brewery",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/majicl/pragma-brewery.git",
  "author": "Majid Parvin <parvin.majid@outlook.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write src/**/*.js",
    "test": "mocha --require @babel/register src/**/*.spec.js src/**/**/*.spec.js",
    "test:watch": "cross-env NODE_ENV=test mocha --require @babel/register --watch-extensions js --watch src/**/*.spec.js src/**/**/*.spec.js",
    "test:coverage": "cross-env NODE_ENV=test nyc --require @babel/register --reporter lcov --reporter text mocha --exit --recursive src",
    "start": "nodemon --exec babel-node --inspect src/server.js",
    "clean": "rimraf ./dist",
    "build": "babel ./src -d ./dist -s",
    "serve": "node ./dist/server.js",
    "serve:prod": "NODE_ENV=production node ./dist/server.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "sinon": "^9.2.0"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-oas-generator": "^1.0.28",
    "node-cron": "^2.0.3",
    "node-mocks-http": "^1.9.0",
    "nodemon": "^2.0.6",
    "socket.io": "^2.3.0",
    "swagger-ui-express": "^4.1.4"
  }
}
